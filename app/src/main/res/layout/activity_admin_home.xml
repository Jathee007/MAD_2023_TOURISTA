<?xml version="1.0" encoding="utf-8"?>
<ScrollView



    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background"
    tools:context=".UserHomeActivity">





    <LinearLayout

        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="185dp"
            android:layout_height="46dp"
            android:layout_gravity="center"


            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="ADMIN PART"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"></TextView>


        <android.support.v7.widget.CardView
            android:layout_marginTop="35dp"
            android:id="@+id/adminsightseeing"
            android:elevation="15dp"
            app:cardPreventCornerOverlap="false"
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/teal_200"
            app:cardCornerRadius="50dp"
            android:layout_marginHorizontal="80dp"
            android:layout_height="50dp">
            <TextView
                android:layout_marginTop="10dp"
                android:shadowColor="@color/white"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:text="Add the Places"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="35dp"
            app:cardBackgroundColor="@color/teal_200"
            android:id="@+id/adminhotel"
            android:elevation="15dp"
            app:cardPreventCornerOverlap="false"
            android:layout_width="match_parent"
            app:cardCornerRadius="50dp"
            android:layout_marginHorizontal="80dp"
            android:layout_height="50dp">

            <TextView
                android:layout_marginTop="10dp"
                android:shadowColor="@color/white"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:text="Add the Hotels"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:layout_marginTop="35dp"
            app:cardBackgroundColor="@color/teal_200"
            android:id="@+id/admintransport"
            android:elevation="15dp"
            app:cardPreventCornerOverlap="false"
            android:layout_width="match_parent"
            app:cardCornerRadius="50dp"
            android:layout_marginHorizontal="80dp"
            android:layout_height="50dp">


            <TextView
                android:layout_marginTop="10dp"
                android:shadowColor="@color/white"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:text="View Feedback"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="380dp"
            android:layout_height="390dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/adm" />


    </LinearLayout>



</ScrollView>