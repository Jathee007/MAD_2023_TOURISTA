<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotel.AdminHotelDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivhotelImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:contentDescription="image"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tvhotelTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivhotelImage"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingTop="15dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:text="HotelTitle"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvhotelTitle"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textSize="17dp"
                tools:text="$25"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSuitedFor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvhotelTitle"
                android:layout_alignParentEnd="true"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold|italic"
                tools:text="Beginner" />

            <TextView
                android:id="@+id/tvhotelDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPrice"
                android:paddingHorizontal="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Description"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvhotelDescription"
            android:layout_marginTop="20dp"

            android:orientation="horizontal">



            <Button
                android:id="@+id/btnpayment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@android:drawable/button_onoff_indicator_on"
                android:backgroundTint="@color/purple_700"
                android:text="User reviews"
                android:textAllCaps="false" />

        </LinearLayout>




    </LinearLayout>



</ScrollView>