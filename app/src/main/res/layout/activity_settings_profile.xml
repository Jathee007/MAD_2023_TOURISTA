<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="@color/bgcolor"
    app:layout_constraintStart_toStartOf="parent"
    tools:context=".SettingsProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/view2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:elevation="12dp"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/iv_user_photo"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />
        </android.support.v7.widget.CardView>


        <!--            <ImageView-->
        <!--                android:layout_marginTop="80dp"-->
        <!--                android:layout_gravity="center_horizontal"-->
        <!--                android:id="@+id/iv_user_photo"-->
        <!--                android:layout_width="200dp"-->
        <!--                android:layout_height="200dp"-->
        <!--                android:background="@drawable/button"-->
        <!--                android:contentDescription="Description"-->
        <!--                android:scaleType="fitXY"-->
        <!--                android:src="@drawable/img" />-->


        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Edit"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Delete"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="24sp"

            android:textStyle="normal"
            tools:text="Rajendra Gishor" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:text="Male" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@id/tv_gender"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:text="gishor14@gmail.com" />

        <TextView
            android:id="@+id/tv_mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_email"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"

            android:textStyle="normal"
            tools:text="123456789" />

        <Button

            android:id="@+id/btn_logout"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_mobile_number"
            android:layout_gravity="center"
            android:layout_marginTop="41dp"
            android:backgroundTint="@color/purple_700"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Logout"
            android:textSize="20sp"
            android:textStyle="normal"
            app:cornerRadius="15dp" />

        <TextView
            android:id="@+id/home_testing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_logout"
            android:text="Your price is correct and valid! "
            android:textSize="20sp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>