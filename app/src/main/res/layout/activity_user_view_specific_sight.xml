<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".sightseeing.UserViewSpecificSight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivsightImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:contentDescription="image"
                android:scaleType="centerCrop" />

            <TextView

                android:id="@+id/tvsightTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivsightImage"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingTop="15dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:text="PlaceTitle" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvsightTitle"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textSize="17dp"
                tools:text="$25"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvSuitedFor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvsightTitle"
                android:layout_alignParentEnd="true"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold|italic"
                tools:text="Beginner" />

            <TextView
                android:id="@+id/tvsightDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPrice"
                android:paddingHorizontal="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Description"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvsightDescription"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btncancelsight"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_background"
                android:text="Go back"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnpaymentsight"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_background"
                android:text="User reviews"
                android:textAllCaps="false" />

        </LinearLayout>

        <Button
            android:id="@+id/btnviewvehicle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_background"
            android:text="Hotels are here"
            android:textAllCaps="false" />

    </LinearLayout>


</ScrollView>